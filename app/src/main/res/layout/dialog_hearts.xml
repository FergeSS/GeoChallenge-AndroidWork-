<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="314dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="290dp"
        android:layout_height="314dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medium_frame" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3">

        <ImageView
            android:id="@+id/hearts"
            android:layout_width="115dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:background="@drawable/no_heart" />
        <TextView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/orelega_one_regular"
            android:textColor="#363636"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Come back when your lives are restored"
            />

        <ImageButton
            android:id="@+id/buttonOk"
            android:layout_width="142dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/ok_sel" />
    </LinearLayout>
'
</androidx.constraintlayout.widget.ConstraintLayout>
