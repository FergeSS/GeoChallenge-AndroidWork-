<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="314dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="290dp"
        android:layout_height="314dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medium_frame" />

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.68">

        <TextView
            android:id="@+id/text"
            android:layout_width="195dp"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/orelega_one_regular"
            android:textColor="#363636"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Do you want to go to the menu?" />

        <ImageButton
            android:id="@+id/buttonStay"
            android:layout_width="142dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/stay_button_sel" />

        <ImageButton
            android:id="@+id/buttonExitToMenu"
            android:layout_width="195dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:background="@drawable/exit_to_menu_sel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
